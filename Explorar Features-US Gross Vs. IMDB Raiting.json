{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Relaci√≥n de US Gross y IMDB Raiting por fuente",
  "data": {"url": "data/movies.json"},
  "vconcat": [
    {
      "layer": [
        {
          "mark": "rect",
          "encoding": {
            "x": {"bin": {"maxbins": 10}, "field": "IMDB Rating"},
            "y": {"bin": {"maxbins": 10}, "field": "US Gross"},
            "color": {
              "aggregate": "count",
              "legend": {
                "title": "All Movies Count",
                "direction": "horizontal",
                "gradientLength": 120
              }
            }
          }
        },
        {
          "transform": [{"filter": {"param": "pts"}}],
          "mark": "point",
          "encoding": {
            "x": {"bin": {"maxbins": 10}, "field": "IMDB Rating"},
            "y": {"bin": {"maxbins": 10}, "field": "US Gross"},
            "size": {
              "aggregate": "count",
              "legend": {"title": "Selected Category Count"}
            },
            "color": {"value": "#666"}
          }
        }
      ]
    },
    {
      "width": 330,
      "height": 120,
      "mark": "bar",
      "params": [
        {"name": "pts", "select": {"type": "point", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {"field": "Source", "axis": {"labelAngle": -40}},
        "y": {"aggregate": "count"},
        "color": {
          "condition": {"param": "pts", "value": "steelblue"},
          "value": "grey"
        }
      }
    }
  ],
  "resolve": {"legend": {"color": "independent", "size": "independent"}},
  "config": {}
}